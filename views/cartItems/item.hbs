<!-- Product section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6"><img
          class="card-img-top mb-5 mb-md-0"
          src='\\{{itemObject.imagePath}}'
          alt="..."
        /></div>
      <div class="col-md-6">
        <div class="small mb-1">SKU: BST-498</div>
        <h1 class="display-5 fw-bolder">{{itemObject.name}}</h1>
        <div class="fs-5 mb-5">
          <span class="text-decoration-line-through"></span>
          <span>${{itemObject.unitPrice}}</span>
        </div>
        <p class="lead">Lorem ipsum dolor sit amet consectetur adipisicing elit.
          Praesentium at dolorem quidem modi. Nam sequi consequatur obcaecati
          excepturi alias magni, accusamus eius blanditiis delectus ipsam minima
          ea iste laborum vero?</p>
        <!-- Start of form -->
        <form method="POST" action="/carts">
          <!-- Replace 'your-submit-url' with your form submission URL -->
          <!-- Hidden inputs -->
          <input
            type="hidden"
            name="id"
            value='{{itemObject._id}}'
          />
          <input
            type="hidden"
            name="name"
            value='{{itemObject.name}}'
          />
          <input
            type="hidden"
            name="price"
            value="{{itemObject.unitPrice}}"
          />
          <input
            type="hidden"
            name="imagePath"
            value="{{itemObject.imagePath}}"
          />

          <!-- Visible quantity input -->
          <div class="d-flex">
            <input
              class="form-control text-center me-3"
              id="quantity"
              name="quantity"
              type="num"
              value="1"
              style="max-width: 3rem"
            />
            <button class="btn btn-outline-dark flex-shrink-0" type="submit">
              <i class="bi-cart-fill me-1"></i>
              Add to cart
            </button>
          </div>
        </form>
        <!-- End of form -->
      </div>
    </div>
  </div>
</section>

